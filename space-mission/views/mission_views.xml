<odoo>
  <record model="ir.ui.view" id="mission_view_form">
    <field name="name">mission.view.form</field>
    <field name="model">spacemission.mission</field>
    <field name="arch" type="xml">
      <form string="Mission Form">
        <sheet>
          <h1><field name="name"/></h1>
          <group>
            <group>
              <field name="ship_id"/>
              <field name="ship_capacity"/>
            </group>
            <group>
              <field name="active"/>
              <field name="launch_date"/>
              <field name="return_date"/>
            </group>
          </group>
          <notebook>
            <page string="Description">
              <field name="objective"/>
            </page>
            <page string="Ship Crew">
              <field name="crew_ids"/>
            </page>
            <page string="Ship Contractors">
              <field name="ship_contractors"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="mission_view_list">
    <field name="name">mission.view.list</field>
    <field name="model">spacemission.mission</field>
    <field name="arch" type="xml">
      <tree string="Missions">
        <field name="name"/>
        <field name="ship_name"/>
        <field name="ship_capacity"/>
      </tree>
    </field>
  </record>

  <record model="ir.ui.view" id="mission_view_graph">
    <field name="name">mission.view.graph</field>
    <field name="model">spacemission.mission</field>
    <field name="arch" type="xml">
      <graph string="Mission Graph">
        <field name="name"/>
        <field name="ship_fuel_capacity" type="measure"/>
        <field name="ship_dry_weight" type="measure"/>
        <field name="ship_capacity" type="measure"/>
      </graph>
    </field>
  </record>
</odoo>
