<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record model="ir.actions.act_window" id="ships_list_action">
    <field name="name">Spaceships</field>
    <field name="res_model">spacemission.spaceship</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Help text.</p>
    </field>
  </record>

  <record model="ir.actions.act_window" id="mission_list_action">
    <field name="name">Missions</field>
    <field name="res_model">spacemission.mission</field>
    <field name="view_mode">tree,form,graph</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Help text.</p>
    </field>
  </record>

  <menuitem name="Space Mission" id="menu_spacemission"
    web_icon="space-mission,static/description/icon.png" sequence="1"/>
  <menuitem name="Space Mission" id="menu_spacemission_head"
    parent="menu_spacemission" sequence="2"/>
  <menuitem name="Spaceships" id="menu_spacemission_ships"
    parent="menu_spacemission_head" sequence="3" action="ships_list_action"/>
  <menuitem name="Missions" id="menu_spacemission_missions"
    parent="menu_spacemission_head" sequence="4" action="mission_list_action"/>
</odoo>
